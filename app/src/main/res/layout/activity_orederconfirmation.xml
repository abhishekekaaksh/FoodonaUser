<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Restarant.restaurant.OrederconfirmationActivity">

    <RelativeLayout
        android:id="@+id/topheader"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">



        <ImageView
            android:id="@+id/back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back_left" />


    </RelativeLayout>

    <ScrollView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topheader">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_restName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/raleway_semibold"
                android:text="Burger Farm"
                android:textColor="@color/black"
                android:textSize="@dimen/mediun_text_size" />

            <TextView
                android:id="@+id/tv_order_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_restName"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/raleway_semibold"
                android:text="View Order Summary"
                android:textColor="@color/green"
                android:textSize="@dimen/mediun_textt_size" />

            <Button
                android:id="@+id/call"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/tv_restName"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:background="@drawable/bg_key"
                android:drawableLeft="@drawable/ic_call_white"
                android:fontFamily="@font/raleway_semibold"
                android:gravity="center"
                android:text="CALL"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/call"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/mais" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/map"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/live"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_minus" />

                <TextView
                    android:id="@+id/tv_live_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/live"
                    android:text="Live Status"
                    android:textAllCaps="true"
                    android:textColor="@color/red" />

                <TextView
                    android:id="@+id/tv_confirmation"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_live_status"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/live"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="@string/waiting_msg"
                    android:textColor="@color/black"
                    android:textSize="@dimen/mediun_text_size" />

                <TextView
                    android:id="@+id/tv_conf_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_confirmation"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/live"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="@string/confirmation_msg"
                    android:textColor="@color/black"
                    android:textSize="@dimen/mediun_textt_size" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>