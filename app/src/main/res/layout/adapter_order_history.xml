<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:background="@color/white"
        android:id="@+id/fcardk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_margin="2dp"
            android:id="@+id/fcard"
            android:layout_width="50dp"
            android:layout_height="50dp"
            card_view:cardCornerRadius="@dimen/card_album_radius">
        <ImageView
            android:id="@+id/rest_image"
            android:src="@drawable/logo"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tv_restname"
            android:layout_toRightOf="@+id/fcard"
            android:text="Burger Farm"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/mediun_text_size"
            android:textColor="@color/black"
            android:fontFamily="@font/raleway_semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_restlocation"
            android:layout_below="@+id/tv_restname"
            android:layout_toRightOf="@+id/fcard"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/small_text_size"
            android:text="jaipur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/orderStatus"
            android:text="Order Status"
            android:layout_margin="2dp"

            android:textSize="@dimen/small_text_size"
            android:layout_below="@+id/fcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/confirm"
            android:text="Confirm"
            android:layout_marginLeft="15dp"
         android:layout_marginTop="2dp"
            android:textColor="@color/black"
            android:fontFamily="@font/raleway_semibold"
            android:textSize="@dimen/mediun_textt_size"
            android:layout_below="@+id/orderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/deliverytime"
            android:text="Delivery Time"
            android:layout_margin="2dp"

            android:textSize="@dimen/small_text_size"
            android:layout_below="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_deliverytime"
            android:text="Your order will be delivered by"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:textSize="@dimen/mediun_textt_size"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/raleway_semibold"
            android:layout_below="@+id/deliverytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>