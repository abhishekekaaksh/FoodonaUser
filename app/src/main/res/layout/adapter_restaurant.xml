<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
android:background="@color/white"
    tools:context=".Restarant.adapterRestaurant.RestaurantAdapter">

    <androidx.cardview.widget.CardView
        android:background="@color/white"

        android:id="@+id/fcardk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
android:layout_margin="2dp"
                android:id="@+id/fcard"
                android:layout_width="80dp"
                android:layout_height="80dp"
                card_view:cardCornerRadius="@dimen/card_album_radius">

                <ImageView
                    android:id="@+id/rest_pic"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/logo" />
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/per_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/dish_name"
                android:layout_toRightOf="@+id/fcard"
                android:scaleType="fitXY"
                android:visibility="gone"
                app:srcCompat="@drawable/rupee" />

            <ImageView
                android:id="@+id/time_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/viewline"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/pricewtext"
                android:visibility="gone"
                app:srcCompat="@drawable/scoot" />

            <ImageView
                android:id="@+id/star_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@+id/viewline"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/timetext"
                android:src="@drawable/ic_star_black_24dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/pricewtext"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_below="@+id/dish_name"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/per_image"
                android:gravity="center_vertical"
                android:text="200 For two "
                android:textSize="10dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/dish_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/startext"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:lines="2"
                android:layout_toLeftOf="@+id/startext"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/fcard"
                android:fontFamily="@font/opensans_regular"
                android:singleLine="true"
                android:text="North Indian"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/dish_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dish_name"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@+id/fcard"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/black"

                android:singleLine="true"
                android:text="35% off - use code FOODONA"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/viewline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/dish_offer"
                android:layout_toRightOf="@+id/fcard"
                android:background="@color/grey"
                android:visibility="gone" />

            <TextView
                android:id="@+id/timetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewline"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/black"

                android:layout_marginTop="1dp"
                android:layout_toRightOf="@+id/time_image"
                android:gravity="center_vertical"
                android:text="34 Mins "
                android:textSize="10dp" />

            <TextView
                android:id="@+id/rest_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/fcard"
                android:fontFamily="@font/raleway_semibold"
                android:text="Pizza House"
                android:textColor="@color/black"
                android:textSize="@dimen/mediun_textt_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/startext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rating_green"
                android:fontFamily="@font/opensans_extrabold"
                android:gravity="center"
                android:text="4.2"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text_size" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>