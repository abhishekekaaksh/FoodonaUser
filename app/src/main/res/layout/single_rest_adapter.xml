<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:background="@color/white"

        android:id="@+id/fcardk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">


        <Button
            android:id="@+id/add"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/add_btn"
            android:text="Add     +"
            android:textColor="@color/red" />

        <androidx.cardview.widget.CardView
            android:id="@+id/fcard"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            card_view:cardCornerRadius="@dimen/card_album_radius">



            <ImageView
                android:id="@+id/dish_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:scaleType="fitXY"
                android:background="@drawable/editbvc"
                />

            <ImageView
                android:id="@+id/veg_image"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="5dp"
                android:src="@drawable/veg" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/cart_plus_minus_layout"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:background="@drawable/add_btn"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/cart_minus_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:src="@drawable/ic_minus"
                android:tint="@color/red" />

            <TextView
                android:id="@+id/cart_product_quantity_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:text="0"
                android:textSize="12dip"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/cart_plus_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_plus"
                android:tint="@color/red" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ratingtr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dish_price1"
            android:layout_toRightOf="@+id/fcard"
            android:gravity="center">

            <!--  <RatingBar
                  android:id="@+id/ratingBar"
                  style="@style/foodRatingBar"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:numStars="6"
                  android:rating="2.0"
                  android:scaleX="0.5"
                  android:scaleY="0.5"
                  android:stepSize="1.0" />-->
            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="0.0" />

            <TextView
                android:id="@+id/rating_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/ratingBar"
                android:text="25 votes"
                android:textColor="@color/black"
                android:textSize="9sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/dish_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dish_desc"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/dish_price"
            android:text="price"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/dishnmame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/add"
            android:layout_toRightOf="@+id/fcard"

            android:fontFamily="@font/raleway_semibold"
            android:text="name"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dish_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dishnmame"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/add"
            android:layout_toRightOf="@+id/fcard"
            android:fontFamily="@font/raleway_regular"
            android:text="name"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/dish_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dish_desc"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/fcard"
            android:text="price"
            android:textSize="12sp" />

    </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>